class Solution {
public:
    vector<vector<int>> findFarmland(vector<vector<int>>& land) {
        vector<vector<int>> res;
        for (int i=0; i<land.size(); i++){
            for (int j=0; j<land[0].size(); j++){
                if (land[i][j] == 1){
                    int min_row=i, min_col=j, max_row=i, max_col=j;
                    dfs(land, i, j, min_row, min_col, max_row, max_col);
                    res.push_back({min_row, min_col, max_row, max_col});
                }
            }
        }
        return res;
    }
    void dfs(vector<vector<int>>& land, int i, int j, int& min_row, int& min_col, int& max_row, int& max_col){
        if (i<0 || j<0 || i>=land.size() || j>=land[0].size() || land[i][j] == 0){
            return;
        }
        land[i][j] = 0;
        if (i<min_row) min_row = i;
        if (j<min_col) min_col = j;
        if (i>max_row) max_row = i;
        if (j>max_col) max_col = j;

        dfs(land, i+0, j+1, min_row, min_col, max_row, max_col);
        dfs(land, i+0, j-1, min_row, min_col, max_row, max_col);
        dfs(land, i+1, j+0, min_row, min_col, max_row, max_col);
        dfs(land, i-1, j+0, min_row, min_col, max_row, max_col);
    }
};
